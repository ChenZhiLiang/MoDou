<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image_bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@mipmap/icon_yuan_ceshi"
        android:layout_marginLeft="@dimen/dimen_16px"/>

    <TextView
        android:id="@+id/tv_bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_bank"
        android:layout_marginLeft="@dimen/dimen_16px"
        android:text="建设银行"
        android:textSize="@dimen/text_14px"
        android:textColor="@color/default_text_color"/>
    <TextView
        android:id="@+id/tv_bank_car_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_bank"
        android:layout_below="@+id/tv_bank_name"
        android:layout_marginLeft="@dimen/dimen_16px"
        android:layout_marginTop="@dimen/dimen_8px"
        android:text="6212 2241 1231 4566"
        android:textSize="@dimen/text_14px"
        android:textColor="@color/default_hint_color"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dimen_10px"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_gray"
        android:text="解除绑定"
        android:textColor="@color/default_text_color"
        android:textSize="@dimen/text_12px"/>
</RelativeLayout>