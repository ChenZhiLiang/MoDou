<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_10px"
    android:background="@color/white"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/ll_undisposed"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_undisposed"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_50px"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="未处理"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_14px" />

        <View
            android:id="@+id/view_undisposed"
            android:layout_width="@dimen/dimen_70px"
            android:layout_height="@dimen/dimen_2px"
            android:layout_gravity="center_horizontal"
            android:background="@color/blue" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_underway"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_underway"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_50px"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="上门中"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/text_14px" />

        <View
            android:id="@+id/view_underway"
            android:layout_width="@dimen/dimen_70px"
            android:layout_height="@dimen/dimen_2px"
            android:layout_gravity="center_horizontal"
            android:background="@color/blue"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_processed"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_processed"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_50px"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="已处理"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/text_14px" />

        <View
            android:id="@+id/view_processed"
            android:layout_width="@dimen/dimen_70px"
            android:layout_height="@dimen/dimen_2px"
            android:layout_gravity="center_horizontal"
            android:background="@color/blue"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
