<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_90px"
    android:orientation="horizontal"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/default_hint_color"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5元"
            android:textSize="@dimen/text_14px"
            android:textColor="@color/default_text_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8px"
            android:text="抵扣券"
            android:textSize="@dimen/text_14px"
            android:textColor="@color/default_text_color"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10px"
        android:background="@color/bg"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8px"
            android:text="蝗灾罗师傅"
            android:textColor="@color/default_hint_color"
            android:textSize="@dimen/text_14px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_8px"
            android:text="有效期：2019-10-10"
            android:textColor="@color/default_hint_color"
            android:textSize="@dimen/text_14px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8px"
            android:text="使用规则：领券即可到实体店消费抵扣"
            android:textColor="@color/default_hint_color"
            android:textSize="@dimen/text_12px"/>
    </LinearLayout>

    <View
    android:layout_width="1dp"
    android:layout_height="@dimen/dimen_30px"
    android:layout_gravity="center"
    android:background="@color/white"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="去使用"
        android:background="@color/bg"
        android:textSize="@dimen/text_14px"
        android:textColor="@color/default_hint_color"
        />

</LinearLayout>