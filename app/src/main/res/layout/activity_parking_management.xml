<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true">

    <include layout="@layout/include_toolbar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_36px"
                android:layout_margin="@dimen/dimen_16px"
                android:background="@drawable/bg_gray">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/image_arrow_right"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="请选择停车场"
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/text_12px" />


                <ImageView
                    android:id="@+id/image_arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_16px"
                    android:padding="@dimen/dimen_10px"
                    android:src="@mipmap/icon_arrow_right" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_16px">

                <TextView
                    android:id="@+id/tv_park_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="麒麟山停车场"
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/text_16px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@mipmap/icon_map"
                    android:drawablePadding="@dimen/dimen_8px"
                    android:text="去这里"
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/text_14px" />

                <TextView
                    android:id="@+id/tv_carport_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_park_name"
                    android:layout_marginTop="@dimen/dimen_8px"
                    android:text="总车位：666"
                    android:textColor="@color/default_hint_color"
                    android:textSize="@dimen/text_14px" />

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_carport_count"
                    android:layout_marginTop="@dimen/dimen_8px"
                    android:text="距离：7.14km"
                    android:textColor="@color/default_hint_color"
                    android:textSize="@dimen/text_14px" />

                <TextView
                    android:id="@+id/tv_standard_charge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_distance"
                    android:layout_marginTop="@dimen/dimen_8px"
                    android:lineSpacingExtra="@dimen/dimen_4px"
                    android:text="收费标准：30分钟后开始收费，30分钟后开始收费，30分钟后开始收费，30分钟后开始收费"
                    android:textColor="@color/default_hint_color"
                    android:textSize="@dimen/text_14px" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10px"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/dimen_16px">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_love_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的爱车"
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/text_16px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_20px"
                    android:layout_toRightOf="@+id/tv_love_car"
                    android:text="最多可添加3辆"
                    android:textColor="@color/default_hint_color"
                    android:textSize="@dimen/text_12px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="+"
                    android:textSize="@dimen/dimen_16px" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/dimen_8px"
                android:layout_marginBottom="@dimen/dimen_8px"
                android:background="@color/view_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_16px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="点击添加我的爱车"
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/text_14px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dimen_8px"
                    android:text="绑定您的车辆，让停车支付更便捷"
                    android:textColor="@color/default_hint_color"
                    android:textSize="@dimen/text_14px" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10px"
            android:background="@color/white"
            android:drawableRight="@mipmap/icon_arrow_right"
            android:padding="@dimen/dimen_16px"
            android:text="月租续费"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/text_16px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10px"
            android:background="@color/white"
            android:drawableRight="@mipmap/icon_arrow_right"
            android:padding="@dimen/dimen_16px"
            android:text="缴费记录"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/text_16px" />
    </LinearLayout>
</LinearLayout>